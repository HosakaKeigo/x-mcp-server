{
  "name": "x-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for X (formerly Twitter) API integration",
  "type": "module",
  "bin": {
    "x-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "pnpm run build",
    "dev": "tsx src/index.ts",
    "watch": "tsc --watch",
    "check": "biome check .",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "twitter",
    "x",
    "api"
  ],
  "author": "Hosaka Keigo <hosaka@piano.or.jp>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.0",
    "twitter-api-v2": "^1.27.0",
    "zod": "^3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.7",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.7"
  }
}
